<h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f|  %>
    <h2>Title<h2>
    <%= f.text_field :title, autofocus:true, id:"book_title", placeholder:"Title" %>
    <h2>Opinion<h2>
    <%= f.text_area :body, autofocus:true, id:"book_opinion", placeholder:"Opinion" %>
    <%= f.submit "Update Book" %>
    <% end %>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
